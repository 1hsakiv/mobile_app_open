<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/snackbar_rounded_corners"
    android:padding="8dp"
    android:elevation="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.49"
        android:text="@string/placeholder"
        android:id="@+id/resultsDetails"
        android:textColor="#333538"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultsDetails"
        android:id="@+id/resultsDetailsSubTitle"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:textColor="#7C8289"
        android:text="TFLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultsDetailsSubTitle"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/resultsDetailsTitle"
        android:textSize="24sp"
        android:textColor="#333538"
        android:textStyle="bold"
        android:text="Image Classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultsDetailsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_close_24"
        android:id="@+id/resultsDetailsCloseButton"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>