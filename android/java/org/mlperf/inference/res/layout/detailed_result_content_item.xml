<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/detail_margin"
    android:layout_marginEnd="@dimen/detail_margin"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/detailedResultItemIcon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_image_classification"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <org.mlperf.inference.ui.DetailedResultBar
        android:id="@+id/detailedResultsBar"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toStartOf="@+id/detailedResultItemScore"
        app:layout_constraintStart_toStartOf="@+id/detailedResultItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/detailedResultItemTitle"
        />

    <TextView
        android:id="@+id/detailedResultItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailedResultsBar"
        app:layout_constraintStart_toStartOf="@id/detailedResultItemTitle"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/medium_gray"
        android:fontFamily="@font/source_sans_pro_regular"
        android:text="TFLite"
        />

    <TextView
        android:id="@+id/detailedResultItemScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="right"
        android:lines="1"
        android:minEms="3"
        android:text="4000.00"
        android:textColor="#135384"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/detailedResultItemMoreInfoButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:textColor="#135384"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@id/detailedResultItemIcon"
        app:layout_constraintTop_toTopOf="@id/detailedResultItemIcon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Placeholder"
        android:id="@+id/detailedResultItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/detailedResultItemMoreInfoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_info"
        android:layout_width="12dp"
        android:textColor="#808080"
        android:gravity="center"
        android:layout_height="12dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E6E6E6"
        app:layout_constraintStart_toStartOf="@id/detailedResultItemTitle"
        app:layout_constraintEnd_toEndOf="@id/detailedResultItemScore"
        app:layout_constraintTop_toBottomOf="@id/detailedResultItemSubtitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>