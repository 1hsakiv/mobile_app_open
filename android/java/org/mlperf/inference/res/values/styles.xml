<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/ml_accent</item>
       <item name="actionBarStyle">@style/MyActionBar</item>
      <item name="windowActionBarOverlay">true</item>
  </style>
  <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

    <style name="MlThemeActionBar.Overlay">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/topActionBarColor</item>
        <item name="background">@color/topActionBarColor</item>
        <item name="titleTextStyle">@style/Theme.Ml.ActionBar.Overlay.TitleTextStyle</item>
    </style>

    <style name="Theme.Ml.ActionBar.Overlay.TitleTextStyle" parent="">
        <item name="android:fontFamily">@font/varela_round_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/varela_round_regular</item>
    </style>

    <style name="MlThemeActionBar" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:actionBarSize">80dp</item>
        <item name="actionBarStyle">@style/Theme.Ml.ActionBar.Solid</item>
        <item name="colorAccent">@color/ml_accent</item>
    </style>

    <style name="Theme.Ml.ActionBar.Solid" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/Theme.Ml.ActionBar.TitleTextStyle</item>
    </style>
    <style name="Theme.Ml.ActionBar.TitleTextStyle" parent="">
        <item name="android:fontFamily">@font/varela_round_regular</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="positive_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:background">@drawable/positive_gradient</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="text_button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textColor">@color/ml_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="cooldown_bar" parent="Widget.AppCompat.SeekBar.Discrete">
      <item name="android:progressBackgroundTint">@color/div_gray</item>
      <item name="android:progressTint">@color/ml_accent</item>
      <item name="android:colorControlActivated">@color/ml_blue</item>
    </style>
</resources>
